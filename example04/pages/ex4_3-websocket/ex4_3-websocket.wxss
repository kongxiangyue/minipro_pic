.page {
  margin: 0rpx 10rpx;
}

.sendarea {
  display: flex;
  flex-direction: row;
}

.message {
  flex: 3;
  height: 60rpx;
  border:1px grey solid;
}
.sendbtn {
  flex: 1;
  background-color: green;
  color: white;
  text-align: center;
  height: 60rpx;
  border-radius: 3px;
}

.message_title {
  width: 100%;
  text-align: center;
  font-size: 20px;
  font-weight: bolder;
}

.message_area {
  width: 100%;
  height: 350rpx;
}

.send_area {
  background-color: lightpink;
}

.receive_area {
  background-color:lightblue;
}



